<div class="container">    
  <div id="passwordbox" style="margin-top:50px;" class="mainbox col-md-9 col-md-offset-2 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Change your password</div>                        
      </div>     
      <div style="padding-top:30px" class="panel-body" >
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :id=>"changepasswordform", :class=>"form-horizontal",:role=>"form" }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <label for="newpassword" class="col-md-3 control-label">New Password</label>
            <div class="col-md-9">                                        
              <%= f.password_field :password, :class=>"form-control", :placeholder =>"New Password", :required => true %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
              <% end %>
            </div>
            
          </div>

          <div class="form-group">
            <label for="newpassword" class="col-md-3 control-label">Confirm New Password</label>
            <div class="col-md-9">                                        
              <%= f.password_field :password_confirmation, :class=>"form-control", :placeholder =>"Confirm New Password", :required => true %>
            </div>
          </div>  
          <div class="form-group">
            <div class="col-md-offset-3 col-md-9">      
              <%= f.submit "Change my password", :id=>"btn-chng-password", :class=>"btn btn-info" %>
            </div>
          </div>
        <% end %>
        <%= link_to "Sign up", new_registration_path(resource_name), :class => "pull-right btn btn-primary btn-sm" %>
        <%= link_to "Log in", new_session_path(resource_name), :class => "pull-right btn btn-primary btn-sm", :style=>"margin-right:25px;" %>
      </div>
    </div>
  </div>
</div>
<%#= render "devise/shared/links" %>
