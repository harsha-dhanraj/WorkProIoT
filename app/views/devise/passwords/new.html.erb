<div class="container">    
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Forgot your password?</div>                        
      </div>     

      <div style="padding-top:30px" class="panel-body" >
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,:id=>"passwordform", :class=>"form-horizontal",:role=>"form" }) do |f| %>
  			<%= devise_error_messages! %>

  <!-- <div class="field">
    <%#= f.label :email %><br />
    <%#= f.email_field :email, autofocus: true %>
  </div> -->
  <div style="margin-bottom: 25px" class="input-group">
    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
    <%= f.email_field :email, autofocus: true, :class=>"form-control",:id=>"login-username", :placeholder => "Enter your registered email address", :required => true %> 
	</div>

	<div style="margin-top:10px" class="form-group">                                    
    <div class="col-sm-12 controls">      
      <%= f.submit "Send me reset password instructions", :class=>"btn btn-success" %>      
    </div>
	</div>

  <!-- <div class="actions">
    <%#= f.submit "Send me reset password instructions" %>
  </div> -->
<% end %>
<%= link_to "Sign up", new_registration_path(resource_name), :class => "pull-right btn btn-primary btn-sm" %>
<%= link_to "Log in", new_session_path(resource_name), :class => "pull-right btn btn-primary btn-sm", :style=>"margin-right:25px;" %>
</div>
</div>
</div>
</div>



<%#= render "devise/shared/links" %>
