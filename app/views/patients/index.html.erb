<h1>Patients List</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th  style="text-align: center;">Name</th>
      <th  style="text-align: center;">Disease</th>
      <th  style="text-align: center;" nowrap>Personal Contact Number</th>
      <th  style="text-align: center;">Emergency Contact Number</th>      
      <th  style="text-align: center;">Address</th>
      <th  style="text-align: center;" colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td nowrap><%= patient.name %></td>
        <td nowrap><%= patient.disease %></td>
        <td nowrap><%= patient.personal_contact_no %></td>
        <td nowrap><%= patient.emergency_contact_no %></td>
        <td nowrap><%= patient.address %></td>        
        <td><%= link_to "<i class='fa fa-eye'></i>".html_safe, patient, :class=>"btn btn-info btn-sm", :style=>"color:white", :title => "View" %></td>
        <td><%= link_to "<i class='fa fa-pencil'></i>".html_safe, edit_patient_path(patient), :class=>"btn btn-primary btn-sm", :style=>"color:white", :title => "Edit" %></td>
        <td><%= link_to "<i class='fa fa-trash'></i>".html_safe, patient, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-sm", :style=>"color:white", :title => "Delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path, :class=>"btn btn-success btn-sm", :style=>"color:white" %>
