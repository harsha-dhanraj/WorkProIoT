<h1>Registered Vehicles</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th  style="text-align: center;">Name</th>
      <th  style="text-align: center;">Company</th>
      <th  style="text-align: center;" nowrap>Engine number</th>
      <th  style="text-align: center;">Color</th>
      <th  style="text-align: center;">Type</th>
      <th  style="text-align: center;">Owner</th>
      <th  style="text-align: center;">Mobile</th>
      <th  style="text-align: center;">Address</th>
      <th  style="text-align: center;" colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td nowrap><%= vehicle.name %></td>
        <td nowrap><%= vehicle.company %></td>
        <td nowrap><%= vehicle.engine_number %></td>
        <td nowrap><%= vehicle.color %></td>
        <td nowrap><%= vehicle.type %></td>
        <td nowrap><%= vehicle.owner %></td>
        <td nowrap><%= vehicle.mobile %></td>
        <td><%= vehicle.address %></td>
        <td><%= link_to 'Show', vehicle, :class=>"btn btn-info btn-sm", :style=>"color:white" %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle), :class=>"btn btn-primary btn-sm", :style=>"color:white" %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-sm", :style=>"color:white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path, :class=>"btn btn-success btn-sm", :style=>"color:white" %>
